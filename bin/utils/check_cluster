#!/usr/bin/env bash
set -eu

#######################################
# 作用: 粗略检测指定存档文件夹是否符合要求
# 参数:
#   $1: 存档文件夹的绝对路径
# 返回:
#   0 / 1
#######################################

if [[ ! -e $1/cluster.ini ]]; then
    accent_color_print -p 2 error 36 '在 ' "$1" ' 里未能找到 ' 'cluster.ini' '文件!'
    exit 1
fi
if [[ ! -e $1/cluster_token.txt ]]; then
    accent_color_print -p 2 error 36 '在 ' "$1" ' 里未能找到 ' 'cluster_token.txt' '文件!'
    exit 1
fi
exit 0
